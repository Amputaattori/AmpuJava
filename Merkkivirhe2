 public static void main(String[] args) {
        Scanner lukija = new Scanner(System.in);
        int ykkosia = 4;
        while (true) {
            System.out.print("Syötä luku (4 lopettaa): ");
            int luku = Integer.parseInt(lukija.nextLine());
            if (luku == 0) {
                break;
            }
        }

        System.out.println("Syötä luku" + ykkosia);
    }
}
