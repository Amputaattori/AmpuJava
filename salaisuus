 
import java.util.Scanner;
 
public class ParitonVaiParillinen {
 
    public static void main(String[] args) {
        Scanner lukija = new Scanner(System.in);                   // nimetään scanneri lukijaksi
        System.out.print("Anna luku: ");                          
        int arvo = Integer.parseInt(lukija.nextLine());            // luetaan kokonaisluku käyttäjältä ja asetetaan se muuttujaan arvo
 
        if ((arvo % 2) == 0){                                      // tarkastellaan arvoa
            System.out.print("Luku" + arvo + " on parillinen.");
        } else {
            System.out.print("Luku" + arvo + " on pariton.");
        }
    }
}

------------------------------------------------------------------
// PIZZABILEET

import java.util.Scanner;
 
public class ReilutPitsabileet {
 
    public static void main(String[] args) {
        Scanner lukija = new Scanner(System.in);
        System.out.print("Montako osallistujaa? ");
        int osallistuja = Integer.parseInt(lukija.nextLine());
        System.out.print("Montako pitsaa? ");
        int pizza = Integer.parseInt(lukija.nextLine());
        System.out.print("Montako palaa per pitsa? ");
        int pala = Integer.parseInt(lukija.nextLine());
        
        int ylijaama = (pizza * pala) % osallistuja; // pizzapalojen määrä jaetaan osallistujen kanssa ja tökätään jakojäännös arvoon ylijäämä
        
        System.out.print("Paloja jää yli: " + ylijaama); // edeltävän ulostus
                
    }
}
