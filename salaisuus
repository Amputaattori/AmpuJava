import java.util.Scanner;
 
public class Ylinopeussakko {
 
    public static void main(String[] args) {
        Scanner lukija = new Scanner(System.in);
 
        System.out.print("Kerro nopeus: "); // ulostetaan kysymys
        int nopeus = Integer.parseInt(lukija.nextLine()); // kaapataan kokonaislukumuuttuja nopeuteen seuraava inputti 
       
        
        if (nopeus>120){ //if suluissa oleva on totta -> suoritetaan aaltosuluissa oleva asia. Muuten ei
            System.out.println("Ylinopeussakko!");
        }
        
    }
}
