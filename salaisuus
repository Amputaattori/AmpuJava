 
import java.util.Scanner;
 
public class ParitonVaiParillinen {
 
    public static void main(String[] args) {
        Scanner lukija = new Scanner(System.in);                   // nimetään scanneri lukijaksi
        System.out.print("Anna luku: ");                          
        int arvo = Integer.parseInt(lukija.nextLine());            // luetaan kokonaisluku käyttäjältä ja asetetaan se muuttujaan arvo
 
        if ((arvo % 2) == 0){                                      // tarkastellaan arvoa
            System.out.print("Luku" + arvo + " on parillinen.");
        } else {
            System.out.print("Luku" + arvo + " on pariton.");
        }
    }
}
